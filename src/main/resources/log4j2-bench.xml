<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ERROR" name="BenchmarkSync">
    <Appenders>
        <File name="File"
              fileName="${sys:benchmark.logFile:-/tmp/log4j2-bench.log}"
              bufferedIO="true"
              bufferSize="8192">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>
